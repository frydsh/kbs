filename=`date +%Y%m%d`
backupdir=/backup/bbs/trace
dirname=$backupdir/`date +%Y%m`
mkdir $dirname
mv -f /home0/bbs/trace $dirname
/bin/gzip -S "$filename.gz" $dirname/trace

mv -f /home0/bbs/bbs.log $dirname
/bin/gzip -S "$filename.gz" $dirname/bbs.log

mv -f /home0/bbs/user.log $dirname
/bin/gzip -S "$filename.gz" $dirname/user.log

mv -f /home0/bbs/connect.log /home0/back/connect.log
mv -f /home0/bbs/ValidIP /backup/bbs/ValidIP
/bin/gzip -S "$filename.gz" /backup/bbs/ValidIP
