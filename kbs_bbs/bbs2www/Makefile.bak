CGIPATH = /home/www/cgi-bin/bbs
HTMPATH = /home/www/html
BBSINCLUDE = /home/bbs/smth_bbs
BBSINCLUDE2 = ../include
BBSLIBRARY = /home/bbs/smth_bbs/NJU-0.9/lib

#ifeq (Makefile.spec ,$(wildcard Makefile.spec))
include	../Makefile.spec
#endif

MAKE = make
CC 	= gcc
CFLAGS = -g -I$(BBSINCLUDE) -I$(BBSINCLUDE2)
LDFLAGS = -L$(BBSLIBRARY) -lbbslib
OS_DEF = -DLINUX
SITE_DEF = -DINVISIBLE -DSMTH -DNJU_WWWBBS -DBBS2WWW
#DEFINES = $(OS_DEF) $(SITE_DEF)


DIRS = lib src

#.c.o:   ;   $(CC) $(CFLAGS) $(DEFINES) -c $*.c

MAKEFLAG = MAKE=$(MAKE) CC=$(CC) BBSHOME=$(BBSHOME) BBSSITE=$(BBSSITE) CFLAGS="$(CFLAGS)" LDFLAGS="$(LDFLAGS)" OS_DEF="$(OS_DEF)" SITE_DEF="$(SITE_DEF)"

all:
	@echo "== Making main program and relatve src =="
	@for x in $(DIRS); \
	do \
		echo "--> $$x"; \
		(cd $$x; $(MAKE) $(MAKEFLAG) all ; cd .. ); \
		echo "<-- $$x"; \
		echo " "; \
	done
	echo "done."

install: all
	@echo "== Installing Everything =="
	@for x in $(DIRS); \
	do \
		echo "--> $$x"; \
		(cd $$x; make install ; cd .. ); \
		echo "<-- $$x"; \
		echo " "; \
	done
	echo "done."
	#rm -rf $(CGIPATH)/bbslogin
	#cp -f $(CGI) $(CGIPATH)
	chmod +s $(CGIPATH)/*
	cp html/* $(HTMPATH)

clean:
	@echo "== cleanning junks, object files, and binaries .. =="
	@for x in $(DIRS); \
	do \
		echo "--> $$x"; \
		(cd $$x; make clean ; cd .. ); \
		echo "<-- $$x"; \
		echo " "; \
	done
	echo "done."
#	rm -f *.o core *.core libbbslib.a $(CGI)
